<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetByIdActivity">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="7dp"
        android:layout_marginVertical="10dp"
        android:hint="Введите id книги"/>

    <Button
        android:id="@+id/btn_getById"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text"
        android:text="показать книгу"
        android:textStyle="italic"
        android:backgroundTint="@color/blue_light"/>

    <Button
        android:id="@+id/btn_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_getById"
        android:backgroundTint="@color/green_light"
        android:text="Показать библиотеку"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/textView_get"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_list"
        android:gravity="center"
        android:text="Text View"
        android:textSize="24dp"/>

</RelativeLayout>