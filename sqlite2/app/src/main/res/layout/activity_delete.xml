<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteActivity">

    <EditText
        android:id="@+id/edit_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="7dp"
        android:layout_marginVertical="10dp"
        android:hint="Введите id книги для удаления"/>

    <Button
        android:id="@+id/btn_delete2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text2"
        android:text="удалить книгу"
        android:textStyle="italic"
        android:backgroundTint="@color/red"/>

    <Button
        android:id="@+id/btn_list4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_delete2"
        android:backgroundTint="@color/green_light"
        android:text="Показать библиотеку"
        android:textStyle="italic"/>

</RelativeLayout>